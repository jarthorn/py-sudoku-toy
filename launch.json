{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Unittest",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "-m", "unittest", "discover", "-s", "tests", "-p", "test_*.py"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}